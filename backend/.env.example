# ============================================================
# 学生会值班管理系统 — 环境变量模板
# 复制此文件为 .env 并填写实际值
# 环境变量前缀: ECHO_
# 例: ECHO_DB_PASSWORD=xxx  =>  覆盖 config.yaml 中的 db.password
# ============================================================

# ── 数据库 ──
ECHO_DB_HOST=localhost
ECHO_DB_PORT=5432
ECHO_DB_NAME=echo_union
ECHO_DB_USER=postgres
ECHO_DB_PASSWORD=
ECHO_DB_SSLMODE=disable

# ── Redis ──
ECHO_REDIS_ADDR=localhost:6379
ECHO_REDIS_PASSWORD=

# ── 认证 ──
ECHO_AUTH_JWT_SECRET=change-me-to-a-random-secret-key-at-least-32-chars

# ── 邮件 ──
ECHO_MAIL_SMTP_HOST=
ECHO_MAIL_SMTP_PORT=587
ECHO_MAIL_USERNAME=
ECHO_MAIL_PASSWORD=
ECHO_MAIL_FROM=

# ── 服务器 ──
ECHO_SERVER_PORT=8080
ECHO_SERVER_BASE_URL=http://localhost:8080

# ── 日志 ──
ECHO_LOG_LEVEL=debug
ECHO_LOG_FORMAT=console
